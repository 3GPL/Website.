<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Create Matrix</title>
</head>
<body>
    <script>
        function createMatrix(rows, columns) {
            // Initialize a matrix with zeros
            let matrix = [];
            for (let i = 0; i < rows; i++) {
                matrix.push(new Array(columns).fill(0));
            }

            // Prompt user for values
            alert(`Creating a ${rows}x${columns} matrix. Please enter the values row-wise:`);

            for (let i = 0; i < rows; i++) {
                for (let j = 0; j < columns; j++) {
                    let value = parseFloat(prompt(`Enter value for element (${i + 1}, ${j + 1}): `));
                    matrix[i][j] = value;
                }
            }

            return matrix;
        }

        // Customize the dimensions of the matrix
        let rows = parseInt(prompt("Enter the number of rows: "));
        let columns = parseInt(prompt("Enter the number of columns: "));

        // Create the matrix
        let customMatrix = createMatrix(rows, columns);

        // Display the matrix
        console.log("The resulting matrix is:");
        console.table(customMatrix);
    </script>
</body>
</html>
